<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FF00FF" />  <!-- The glow color -->
    <corners android:radius="8dp" />
    <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />

    <gradient
        android:startColor="@android:color/white"
        android:centerColor="@android:color/white"
        android:endColor="#FF00FF"
        android:angle="270" />

    <!-- Adding shadow (glow) effect -->
    <stroke
        android:color="#FF00FF"
        android:width="2dp" />

    <!-- Shadow dx and dy, applying horizontal and vertical offsets -->
    <layer-list>
        <item android:left="3dp" android:top="3dp">
            <shape>
                <solid android:color="#FF00FF" />
                <corners android:radius="10dp" />
                <stroke android:color="#FF00FF" android:width="3dp" />
            </shape>
        </item>
    </layer-list>
</shape>
